<h2>{{product.title}}</h2>
<img src="{{product.featured_image | img_url:'300x'}}">


{% comment %}
  These are static content:
  section.settings.tax
  section.settings.shipping
  section.settings.show_reviews

  This means you cannot arrange their positions on the page using the live customizer.
  If you want to arrange their positions, then use blocks instead.
{% endcomment %}

<h4>{{section.settings.tax}}</h4>
<h4>{{section.settings.shipping}}</h4>

{% if section.settings.show_reviews %}
  <h4>⭐⭐⭐⭐⭐</h4>
{% endif %}


{% schema %}
{
  "name": "product page content",
  "settings": [
    {
      "id": "tax",
      "label": "tax-notice",
      "type": "text"
    },
    {
      "id": "shipping",
      "label": "shipping notice",
      "type": "text"
    },
    {
      "id": "show_reviews",
      "label": "show reviews",
      "type": "checkbox"
    }
  ]
}
{% endschema %}